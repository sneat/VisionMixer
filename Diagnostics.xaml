<Window x:Class="VisionMixer.Diagnostics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Diagnostics" Height="366" Width="818" Icon="/VisionMixer;component/Resources/diagnostics.png" ShowInTaskbar="False"
        xmlns:u="clr-namespace:VisionMixer"
        u:WindowBehavior.HideCloseButton="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="29" />
        </Grid.RowDefinitions>
        <ListBox HorizontalAlignment="Stretch" Margin="12,12,12,12" Name="DiagnosticListbox" VerticalAlignment="Stretch" IsSynchronizedWithCurrentItem="True" />
        <Button Content="Clear" Height="23" HorizontalAlignment="Left" Margin="12,0,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" Grid.Row="1" />
    </Grid>
</Window>
